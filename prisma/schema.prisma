//   NEEDS_REAUTHORIZATION
// }

model Preference {
  id           Int    @id @default(autoincrement())
  userId       Int    @unique
  user         User   @relation(fields: [userId], references: [id])
  region       String
  sectionid    String
  maxPrice     String
  minPrice     String
}

